.avatar{
  width: 48px;
  height: 48px;
  background: url(<%= image_path("devquest-sprite.png") %>) rgba(255,255,255, 0.3);
  border: 3px solid grey;
}

.new_char{
    input[type="submit"]{
        display: block;
    }

}

.character-view{
    .avatar{
        margin-right: 10px;
    }
    h4{
        color: #111;
    }
    width: 450px;
    overflow: hidden;


}

.exp-bar{
    border: 1px solid black;
    border-radius: 2px;
    background: rgba(255,255,255,0.3);
    position: relative;
    overflow: hidden;
    height: 6px;
    margin-top: 3px;

    .exp {
        height: 100%;
        background: #adff2f;
        display: block;
        position: absolute;
        left: 0 ;
        top: 0;
    }
}